{
  "name": "ttf-wiki",
  "version": "0.1.0",
  "private": true,
  "bugs": {
    "url": "https://github.com/tontonsflingueurs/wiki/issues"
  },
  "author": "mathiaddotdev",
  "repository": {
    "url": "https://github.com/tontonsflingueurs/wiki"
  },
  "scripts": {
    "bundle": "next build",
    "dev": "next dev",
    "start": "next start",
    "types:check": "fumadocs-mdx && next typegen && tsc --noEmit",
    "postinstall": "fumadocs-mdx",
    "lint": "oxlint . --ignore-path .gitignore",
    "lint:fix": "oxlint --fix .",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "img:convert": "bun run ./scripts/convert-to-webp.ts",
    "img:update-refs": "bun run ./scripts/update-mdx-refs.ts",
    "img:optimize": "bun run ./scripts/convert-to-webp.ts && bun run ./scripts/update-mdx-refs.ts"
  },
  "dependencies": {
    "fumadocs-core": "16.4.6",
    "fumadocs-mdx": "14.2.4",
    "fumadocs-ui": "16.4.6",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bun": "^1.3.6",
    "@types/mdx": "^2.0.13",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": "bunx lint"
  }
}
